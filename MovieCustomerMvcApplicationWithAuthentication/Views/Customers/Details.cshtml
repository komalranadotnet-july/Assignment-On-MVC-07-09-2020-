@model MovieCustomerMvcApplicationWithAuthentication.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<p>Customer Name :@Model.Name</p>
<p>Date of Birth :@Model.Dob.ToLongDateString()</p>
<p>Is Subscribed  To News Letter : @Model.IsSubscribedToNewsLetter</p>
<p>MembershipType:@Model.MembershipType.DiscountRate%</p>
@Html.CheckBoxFor(c=>c.IsSubscribedToNewsLetter)
<div>
    @Html.ActionLink("Back", "Index", "Customers", null, new { @class = "btn btn-primary" })
</div>



